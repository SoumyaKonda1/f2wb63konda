extends layout

block content
  h1= title
  p Welcome to #{title}
  button(type='button', class='btn btn-outline-warning', onclick='doBump()') Press Me
  br
  div#bump Bump the count 
  br
  a(href="/cereal") Click Here to Go To Cereal Page
  script.
      var count=0;
      var bump=1;
      function doBump(){
      count=count+bump;
      bump=bump+1;
      print=document.getElementById("bump");
      print.innerHTML='Count '+count+' with bump '+bump;}
  
